<h1>Cats!</h1>

<h2>Krabby Patties to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="burger">Burger!</label><br>
    <input type="radio" name="sleepy" value="1" checked> Burger!<br>
  </div>

  <button type="submit">Add Burger</button>
</form>